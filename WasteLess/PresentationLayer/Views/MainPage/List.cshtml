@model IEnumerable<BusinessLayer.Models.BFoodItem>
@{
    ViewData["Title"] = "Index";
}

@ViewData["username"]

<h1>Index</h1>

<p>
    <a asp-action="Create" asp-route-username="@ViewData["username"]">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Calories)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PurchaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConsDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User_id)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Calories)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PurchaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExpDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ConsDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User_id)
                </td>
                <td>
                    <a asp-action="Delete" asp-route-username="@ViewData["username"]" asp-route-bfid="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>